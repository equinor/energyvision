{
  "name": "@equinor/energyvision",
  "private": true,
  "engines": {
    "pnpm": ">=10"
  },
  "type": "module",
  "scripts": {
    "setup-project": "pnpm m i",
    "web": "pnpm --filter ./web",
    "studio": "pnpm --filter ./studio",
    "config": "pnpm --filter ./packages/energyvision",
    "build:config": "pnpm --filter @energyvision/shared build",
    "prepack:config": "pnpm --filter @energyvision/shared prepack",
    "search-indexers": "pnpm --filter ./search",
    "docker:build": "docker build --build-arg NEXT_PUBLIC_SANITY_PROJECT_ID=h61q9gi9 --build-arg ARG_SANITY_DATASET=global-development -t envis/web -f web/Dockerfile .",
    "docker:run": "docker run -p 3000:3000 --env-file=web/.env.local envis/web",
    "docker:inspect": "docker run -p 3000:3000 --env-file=web/.env.local -it envis/web /bin/sh",
    "start:web": "pnpm web dev",
    "studio:docker": "DOCKER_BUILDKIT=1 docker build --build-arg ARG_SANITY_DATASET=global-development -t envis/studio -f studio/Dockerfile .",
    "studio:run": "docker run -p 3333:3333 envis/studio",
    "cleandep": "rm -rf node_modules && rm -rf pnpm-lock.yaml && pnpm -r exec rm -rf node_modules",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.6",
    "typescript": "5.9.3",
    "husky": "^9.1.7",
    "lint-staged": "16.2.6"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome check --files-ignore-unknown=true --no-errors-on-unmatched"
    ]
  },
  "packageManager": "pnpm@10.24.0+sha512.01ff8ae71b4419903b65c60fb2dc9d34cf8bb6e06d03bde112ef38f7a34d6904c424ba66bea5cdcf12890230bf39f9580473140ed9c946fef328b6e5238a345a"
}
