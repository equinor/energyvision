{
  "name": "@equinor/energyvision",
  "private": true,
  "engines": {
    "pnpm": ">=10"
  },
  "type": "module",
  "scripts": {
    "setup-project": "pnpm m i",
    "lint:notworking": "eslint ./ --ext .js,.jsx,.ts,.tsx",
    "lint:components": "eslint ./web/components/ --ext .js,.jsx,.ts,.tsx",
    "lint:web": "eslint ./web/ --ext .js,.jsx,.ts,.tsx",
    "lint:search": "eslint ./search/ --ext .ts",
    "lint:studio": "eslint ./studio/ --ext .js,.jsx,.ts,.tsx",
    "lint": "pnpm lint:web && pnpm lint:search && pnpm lint:studio",
    "web": "pnpm --filter ./web",
    "studio": "pnpm --filter ./studio",
    "e2e": "pnpm --filter ./e2e",
    "build:config": "pnpm --filter @equinor/energyvision-config build",
    "search-indexers": "pnpm --filter ./search",
    "docker:build": "docker build --build-arg NEXT_PUBLIC_SANITY_PROJECT_ID=h61q9gi9 --build-arg ARG_SANITY_DATASET=global-development -t envis/web -f web/Dockerfile .",
    "docker:run": "docker run -p 3000:3000 --env-file=web/.env.local envis/web",
    "docker:inspect": "docker run -p 3000:3000 --env-file=web/.env.local -it envis/web /bin/sh",
    "prepare": "is-ci || husky install",
    "start:web": "pnpm web dev",
    "studio:docker": "DOCKER_BUILDKIT=1 docker build --build-arg ARG_SANITY_DATASET=global-development -t envis/studio -f studio/Dockerfile .",
    "studio:run": "docker run -p 3333:3333 envis/studio",
    "lint-staged": "lint-staged -c ./lint-staged-config.js",
    "cleandep": "rm -rf node_modules && rm -rf pnpm-lock.yaml && pnpm -r exec rm -rf node_modules"
  },
  "dependencies": {
    "husky": "^7.0.4",
    "is-ci": "^3.0.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "lint-staged": "^13.2.2",
    "typescript": "5.8.3"
  }
}
