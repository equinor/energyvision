{
  "connection": "default",
  "collectionName": "articles",
  "info": {
    "name": "article"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "image": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "body": {
      "type": "richtext"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "draft",
        "published",
        "unpublished"
      ],
      "default": "draft",
      "required": true
    },
    "ingress": {
      "type": "text",
      "maxLength": 275
    }
  }
}
